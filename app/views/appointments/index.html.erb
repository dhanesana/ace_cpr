 <div class="sticky mdl-shadow--2dp">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1>
          <a href="http://acecprsd.com">
            <img src='http://i.imgur.com/hLSH4op.png'></img>
          </a>
        </h1>
      </li>
    </ul>
  </nav>
</div>

<header>
  <div>
    <div class="large-12">
      <img id="headerImg" src="http://i.imgur.com/5TmBuib.jpg"/>
    </div>
  </div>
</header>

<br>

<% if @user.errors.any? %>
  <div class="row" id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited you from signing up. Correct the following and resubmit:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if @invalid == 1 %>
  <div class="row" id="error_explanation">
    <h2>Invalid or Expired:</h2>
    <ul>
      <li>The code you entered is either invalid or expired.</li>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="medium-6 large-6 column">
    <h4><%= @about.content %></h4>
  </div>
  <div class="medium-6 large-6 column">
    <div class="mdl-shadow--2dp" id="gmap_canvas"></div>
  </div>
</div>

<ul class="example-orbit-content" data-orbit>
  <li data-orbit-slide="headline-1">
    <div class="text-center panel mid-headline">
      <h2><%= @headline.main %></h2>
      <p><%= @headline.content %></p>
    </div>
  </li>
  <li data-orbit-slide="headline-2">
    <div class="text-center panel mid-headline">
      <h2><%= @headline_two.main %></h2>
      <p><%= @headline_two.content %></p>
    </div>
  </li>
  <li data-orbit-slide="headline-3">
    <div class="text-center panel mid-headline">
      <h2><%= @headline_three.main %></h2>
      <p><%= @headline_three.content %></p>
    </div>
  </li>
</ul>

<br>

<div class="row">
  <div class="medium-6 large-6 column">
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">Class Date</th>
          <th>Time (PDT)</th>
        </tr>
      </thead>
      <tbody>
        <% @appointments.each do |appointment| %>
        <tr>
          <td class="mdl-data-table__cell--non-numeric">
            <%= appointment.class_date.strftime("%B %d, %Y (%A)") %>
          </td>
          <td>
            <%= appointment.class_date.strftime("%I:%M %p") %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% if @redeemed == 0 %>
      <%= form_for @coupon, url: {:action => "create", :controller => "coupons"}  do |g| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo">
          <div class="medium-3" id="coupon-input">
            <%= g.label "Enter Promotion Code", :class => 'mdl-textfield__label' %>
            <%= g.text_field :code, :class => 'mdl-textfield__input' %>
          </div>
          <div class="medium-3">
            <%= g.submit 'Redeem', :class => 'coupon-submit button mdl-shadow--2dp' %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div id="form" class="medium-6 large-6 column mdl-shadow--2dp">
    <br>
    <%= form_for @user, url: {:action => "create", :controller => "appointments"}, html: {class: "nifty_form", :"data-abide" => ''} do |f| %>
      <div>
        <%= f.label "Select Date" %>
        <%= f.collection_select(:appointment_id, @appointments, :id, :formated_date ) %>
      </div><br>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo">
        <%= f.label :first_name, :class => 'mdl-textfield__label' %>
        <%= f.text_field :first_name, :class => 'mdl-textfield__input' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo">
        <%= f.label :last_name, :class => 'mdl-textfield__label' %>
        <%= f.text_field :last_name, :class => 'mdl-textfield__input' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo">
        <%= f.label :phone, :class => 'mdl-textfield__label' %>
        <%= f.text_field :phone, :class => 'mdl-textfield__input' %>
        <!-- <span class="mdl-textfield__error">Input is not a number!</span> -->
      </div><br>
      <div id='total-price'> Total: $<%= '%.2f' % @price %> </div>
      <%= form_tag charges_path do %>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button mdl-shadow--2dp"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Total: $<%= '%.2f' % @price %>"
          data-amount="<%= @price * 100 %>"></script>
      <% end %>
    <% end %>
  </div>
</div>

<br>
<br>
<div class="panel mdl-shadow--2dp">
  <div class="row">
    <div class="small-8 medium-6 large-6 column">
      <p>
        Ace CPR San Diego<br>
        8333 Clairemont Mesa Blvd #21<br>
        San Diego, CA 92111<br>
        <a href="mailto:webmaster@example.com">Email Us</a>
      </p>
    </div>
    <div class="small-4 medium-6 large-6 column">
      <ul class="inline-list right">
        <li>
          <a href='/admin'>Admin Login</a>
        </li>
      </ul>
    </div>
  </div>
</div>
