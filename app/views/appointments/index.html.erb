 <div class="sticky mdl-shadow--2dp">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1>
          <a href="/">
            <img src='http://i.imgur.com/hLSH4op.png'></img>
          </a>
        </h1>
      </li>
    </ul>
  </nav>
</div>

<header>
  <div>
    <div class="large-12">
      <img id="headerImg" src=<%= @header.image_url %>/>
    </div>
  </div>
</header>

<br>

<% if @user.errors.any? %>
  <div class="row" id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited you from signing up. Correct the following and resubmit:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if @invalid == 1 %>
  <div class="row" id="error_explanation">
    <h2>Invalid or Expired:</h2>
    <ul>
      <li>The code you entered is either invalid or expired.</li>
    </ul>
  </div>
<% end %>

<div class="row">
  <% if @about_list.about_bullets.size > 0 %>
    <div class="medium-6 large-6 column">
      <% bullets = @about_list.about_bullets.all.sort { |a, b| a.order <=> b.order } %>
      <ul>
      <% bullets.each do |bullet_object| %>
        <li style="font-size:<%=@font_size%>em; line-height:100% !important" class='bullets'>
          <%= bullet_object.bullet %>
        </li>
      <% end %>
      </ul>
    </div>
  <% else %>
    <div class="medium-6 large-6 column">
      <p style="font-size:<%=@font_size%>em; line-height:100% !important"><%= @about.content %></p>
    </div>
  <% end %>
  <div class="medium-6 large-6 column">
    <div class="mdl-shadow--2dp" id="gmap_canvas"></div>
    <div>
      <h6>
        We are conveniently located right off the 805 with plenty of parking in the front and back of the office.
      </h6>
    </div>
  </div>
</div>

<ul class="example-orbit-content" data-orbit>
  <li data-orbit-slide="headline-1">
    <div class="text-center panel mid-headline">
      <h2><%= @headline.main %></h2>
      <p><%= @headline.content %></p>
    </div>
  </li>
  <li data-orbit-slide="headline-2">
    <div class="text-center panel mid-headline">
      <h2><%= @headline_two.main %></h2>
      <p><%= @headline_two.content %></p>
    </div>
  </li>
  <li data-orbit-slide="headline-3">
    <div class="text-center panel mid-headline">
      <h2><%= @headline_three.main %></h2>
      <p><%= @headline_three.content %></p>
    </div>
  </li>
</ul>


<div class="row">
  <div class="small-12 medium-12 large-12 column">
    <h3> Class Types </h3>
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp index-table" id="types-table">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">
            Select a class type to view available courses:
          </th>
        </tr>
      </thead>
      <tbody>
        <% @types.each do |type| %>
        <tr>
          <td class="types mdl-data-table__cell--non-numeric main-td">
            <p>
              <%= link_to type.name, type %>
            </p>
            <p class='blurb'>
              <%= type.blurb %>
            </p>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

